<Page x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.GazeInteractionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:g="using:Microsoft.Toolkit.Uwp.Input.GazeInteraction"
      xmlns:local="using:Microsoft.Toolkit.Uwp.SampleApp.Common"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      g:GazeInput.CursorRadius="20"
      g:GazeInput.Interaction="Enabled"
      g:GazeInput.IsCursorVisible="True"
      g:GazeInput.IsSwitchEnabled="False"
      mc:Ignorable="d">
    <Page.Resources>
        <local:TimeSpanConverter x:Key="ConvertTimeToMilliSecs" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="28,4"
                    Orientation="Horizontal">
            <TextBlock Margin="0,0,8,0"
                       FontSize="22"
                       Text="Cursor Color" />
            <Rectangle Width="80"
                       Height="32"
                       Margin="0,0,8,0">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{Binding ElementName=ColorPicker, Path=Color}" />
                </Rectangle.Fill>
            </Rectangle>
            <ToggleButton x:Name="ColorToggle"
                          Content="Open/Close Color Selector" />
            <Popup IsOpen="{Binding ElementName=ColorToggle, Path=IsChecked}">
                <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                    <ColorPicker x:Name="ColorPicker"
                                 Margin="32"
                                 Color="{x:Bind SelectedColor, Mode=TwoWay}" />
                </Grid>
            </Popup>
        </StackPanel>

        <Grid x:Name="XamlRoot"
              Grid.Row="1" />

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}">
                <Rectangle x:Name="EnterRec"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Fill="#FFB6EC89"
                           Visibility="Collapsed" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="ENTER" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="2"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}">
                <Rectangle x:Name="FixationRec"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Fill="#FF6ACE17"
                           Visibility="Collapsed" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="FIXATION" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="3"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}">
                <Rectangle x:Name="DwellRec"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Fill="#FF1790CE"
                           Visibility="Collapsed" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="DWELL" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="4"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}">
                <TextBlock HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Text="Repeat&#x0d;Delay"
                           TextAlignment="Center" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="5"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="RepeatRec"
                           Grid.ColumnSpan="4"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Fill="#FF175ACE"
                           Visibility="Collapsed" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="REPEAT" />
                <TextBlock x:Name="DwellCountText"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="10"
                           TextAlignment="Left"
                           Visibility="Collapsed" />
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="6"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}">
                <Rectangle x:Name="ExitRec"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Fill="#FFCE1F17"
                           Visibility="Collapsed" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="EXIT" />
            </Grid>


            <Grid Grid.Row="2"
                  Grid.Column="1"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}"
                  BorderThickness="1,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
                <TextBlock Grid.Column="1"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding PropertyDescriptor.Expando.ThresholdDuration.Value, Converter={StaticResource ConvertTimeToMilliSecs}}" />
                <Rectangle Grid.Column="2"
                           Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="2"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}"
                  BorderThickness="1,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
                <TextBlock Grid.Column="1"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding PropertyDescriptor.Expando.FixationDuration.Value, Converter={StaticResource ConvertTimeToMilliSecs}}" />
                <Rectangle Grid.Column="2"
                           Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="3"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}"
                  BorderThickness="1,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="19*" />
                    <ColumnDefinition Width="62*" />
                    <ColumnDefinition Width="19*" />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
                <TextBlock Grid.Column="1"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding PropertyDescriptor.Expando.DwellDuration.Value, Converter={StaticResource ConvertTimeToMilliSecs}}" />
                <Rectangle Grid.Column="2"
                           Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="4"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}"
                  BorderThickness="1,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
                <TextBlock Grid.Column="1"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding PropertyDescriptor.Expando.RepeatDelayDuration.Value, Converter={StaticResource ConvertTimeToMilliSecs}}" />
                <Rectangle Grid.Column="2"
                           Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="5"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}"
                  BorderThickness="1,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
                <TextBlock Grid.Column="1"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding PropertyDescriptor.Expando.DwellRepeatDuration.Value, Converter={StaticResource ConvertTimeToMilliSecs}}" />
                <Rectangle Grid.Column="2"
                           Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="6"
                  Width="100"
                  Height="50"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="{ThemeResource Brush-Alt}"
                  BorderThickness="1,0,1,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
                <TextBlock Grid.Column="1"
                           Margin="5,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding PropertyDescriptor.Expando.ThresholdDuration.Value, Converter={StaticResource ConvertTimeToMilliSecs}}" />
                <Rectangle Grid.Column="2"
                           Height="1"
                           VerticalAlignment="Center"
                           Stroke="{ThemeResource Brush-Alt}" />
            </Grid>

            <ProgressBar x:Name="DwellProgressBar"
                         Grid.Row="0"
                         Grid.Column="1"
                         Grid.ColumnSpan="6"
                         Height="10"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Top"
                         Background="{ThemeResource Brush-Main}"
                         BorderBrush="{ThemeResource Brush-Alt}"
                         BorderThickness="1"
                         Minimum="0"
                         Visibility="Collapsed" />

            <TextBlock x:Name="WarningText"
                       Grid.Row="3"
                       Grid.Column="1"
                       Grid.ColumnSpan="6"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30"
                       Foreground="Firebrick"
                       Text="Please attach eye tracking device"
                       Visibility="Collapsed" />
            <TextBlock x:Name="ClickCount"
                       Grid.Row="3"
                       Grid.Column="1"
                       Grid.ColumnSpan="6"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30"
                       Foreground="Firebrick"
                       Text="" />
        </Grid>
    </Grid>
</Page>
