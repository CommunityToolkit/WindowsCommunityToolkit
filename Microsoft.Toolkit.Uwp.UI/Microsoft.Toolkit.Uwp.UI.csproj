<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>uap10.0</TargetFramework>
    <Title>UWP Community Toolkit UI</Title>
    <Description>This library provides UI services. It is part of the UWP Community Toolkit.</Description>
    <PackageTags>UWP Toolkit Windows UI Converters</PackageTags>

    <UseWindowsDesktopSdk>true</UseWindowsDesktopSdk>
    <UseWindowsMobileSdk>true</UseWindowsMobileSdk>
  </PropertyGroup>


  <ItemGroup>

    <ProjectReference Include="..\Microsoft.Toolkit.Uwp\Microsoft.Toolkit.Uwp.csproj" />

  </ItemGroup>


  <ItemGroup>
    <PackageReference Update="MSBuild.Sdk.Extras" Version="1.1.0" />
    <PackageReference Update="Nerdbank.GitVersioning" Version="2.0.41" />
    <PackageReference Update="SourceLink.Create.CommandLine" Version="2.6.0" />
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>
