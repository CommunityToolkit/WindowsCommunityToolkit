<Page x:Class="CommunityToolkit.WinUI.SampleApp.SamplePages.AdvancedCollectionViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CommunityToolkit.WinUI.SampleApp.SamplePages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="PersonDataTemplate">
            <TextBlock Foreground="White"
                       Text="{Binding Name}" />
        </DataTemplate>
    </Page.Resources>
    <Grid MaxWidth="800"
          Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2"
                   Text="Items from the list are filtered and sorted. On the left you can see the original list and on the right the same one, bound via AdvancedCollectionView."
                   TextWrapping="WrapWholeWords" />
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,10"
                    Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center"
                       Text="Add new item:" />
            <TextBox x:Name="NewItemBox"
                     Width="100"
                     Margin="10,0" />
            <Button x:Name="AddButton"
                    Content="Add" />
        </StackPanel>
        <ListView x:Name="LeftList"
                  Grid.Row="2"
                  Grid.Column="0"
                  Margin="0,0,5,0"
                  Background="{ThemeResource Brush-Grey-03}"
                  ItemTemplate="{StaticResource PersonDataTemplate}" />
        <ListView x:Name="RightList"
                  Grid.Row="2"
                  Grid.Column="1"
                  Margin="5,0,0,0"
                  Background="{ThemeResource Brush-Grey-03}"
                  ItemTemplate="{StaticResource PersonDataTemplate}" />
    </Grid>
</Page>