<Page
    x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.DraggableContentControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Brush-Grey-05}">
        <controls:DraggableContentControl HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          IsRotatingEnabled="True" 
                                          IsScalingEnabled="True"
                                          Height="{Binding Height.Value, Mode=OneWay}"
                                          Width="{Binding Width.Value, Mode=OneWay}">
            <Grid Background="DeepSkyBlue">
                
            </Grid>
        </controls:DraggableContentControl>

        <controls:DraggableContentControl HorizontalAlignment="Left" 
                                          VerticalAlignment="Top" 
                                          IsRotatingEnabled="True" 
                                          IsScalingEnabled="True"
                                          Height="{Binding Height.Value, Mode=OneWay}"
                                          Width="{Binding Width.Value, Mode=OneWay}">
            <Grid Background="OrangeRed">

            </Grid>
        </controls:DraggableContentControl>
    </Grid>

</Page>