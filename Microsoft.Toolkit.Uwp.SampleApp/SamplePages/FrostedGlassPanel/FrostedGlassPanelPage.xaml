<Page
    x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.FrostedGlassPanelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="/Assets/Photos/BigFourSummerHeat.jpg" Stretch="UniformToFill" />

        <controls:FrostedGlassPanel Width="300" Height="300"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                    GlassColor="{Binding Path=GlassColor.Value, Mode=TwoWay}" 
                                    BlurAmount="{Binding Path=BlurAmount.Value, Mode=TwoWay}"
                                    GlassTransparency="{Binding Path=GlassTransparency.Value, Mode=TwoWay}">
            <TextBlock Text="Some text" FontSize="42" Margin="20" />
        </controls:FrostedGlassPanel>
    </Grid>
</Page>
