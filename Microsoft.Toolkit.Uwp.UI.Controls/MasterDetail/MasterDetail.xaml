<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">
    
    <Style TargetType="controls:MasterDetail">
        <Setter Property="MasterWidth"
                Value="480"/>
        <Setter Property="DisplayMode"
                Value="Full"/>
        <Setter Property="DisplaySystemBackButtonOnDetail"
                Value="True"/>
        <Setter Property="DetailTransitions">
            <Setter.Value>
                <TransitionCollection>
                    <EdgeUIThemeTransition Edge="Right" />
                </TransitionCollection>
            </Setter.Value>
        </Setter>
        <Setter Property="MinWidthForFullDisplayMode"
                Value="600"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:MasterDetail">
                    <Grid BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          x:Name="RootGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="MasterColumnDefinition"
                                              Width="Auto" />
                            <ColumnDefinition x:Name="DetailColumnDefinition" />
                        </Grid.ColumnDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="DisplayModes">
                                <VisualState x:Name="Full">
                                    <VisualState.Setters>
                                        <Setter Target="Master.(Grid.ColumnSpan)"
                                                Value="1" />
                                        <Setter Target="Detail.(Grid.Column)"
                                                Value="1" />
                                        <Setter Target="Detail.(Grid.ColumnSpan)"
                                                Value="1" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="CompactMaster">
                                    <VisualState.Setters>
                                        <Setter Target="Master.Width"
                                                Value="NaN" />
                                        <Setter Target="Master.(Grid.ColumnSpan)"
                                                Value="2" />
                                        <Setter Target="Detail.Visibility"
                                                Value="Collapsed" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="CompactDetail">
                                    <VisualState.Setters>
                                        <Setter Target="Master.Visibility"
                                                Value="Collapsed" />
                                        <Setter Target="Detail.(Grid.Column)"
                                                Value="0" />
                                        <Setter Target="Detail.(Grid.ColumnSpan)"
                                                Value="2" />
                                        <Setter Target="Detail.Visibility"
                                                Value="Visible"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="Selection">
                                <VisualState x:Name="HasNoSelection"/>
                                <VisualState x:Name="HasSelection">
                                    <VisualState.Setters>
                                        <Setter Target="NoSelection.Visibility"
                                                Value="Collapsed"/>
                                        <Setter Target="Detail.Visibility"
                                                Value="Visible"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <ContentPresenter Content="{TemplateBinding Master}"
                                          Width="{TemplateBinding MasterWidth}"
                                          x:Name="Master"/>
                        
                        <ContentPresenter Content="{TemplateBinding NoSelectionView}"
                                          Grid.Column="1"
                                          x:Name="NoSelection"/>

                        <ContentPresenter Content="{TemplateBinding Detail}"
                                          ContentTemplate="{TemplateBinding DetailTemplate}"
                                          ContentTemplateSelector="{TemplateBinding DetailTemplateSelector}"
                                          x:Name="Detail"
                                          Visibility="Collapsed"
                                          Grid.Column="1"
                                          ContentTransitions="{TemplateBinding DetailTransitions}"/>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
