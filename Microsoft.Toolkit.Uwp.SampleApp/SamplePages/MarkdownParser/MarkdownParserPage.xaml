<Page
    x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.MarkdownParserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Microsoft.Toolkit.Uwp.SampleApp.SamplePages"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Padding="12">
            <CheckBox IsChecked="{x:Bind Viewmodel.UseTables, Mode=TwoWay}">Allow Tables</CheckBox>
            <TextBox x:Name="RawMarkdown"
                     Header="Markdown"
                     FontFamily="Consolas"
                     Text="{x:Bind Viewmodel.Input, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     AcceptsReturn="True"
                     MinHeight="60" />
            <TextBlock
                Text="Result:"
                Margin="0,10,0,0" />
            <TextBlock x:Name="MarkdownResult" />
        </StackPanel>
    </ScrollViewer>
</Page>